task :default => :welcome

task :welcome do
    sh "echo Rake is up and running. Hurrah!"
end

def ask message
	print message
	STDIN.gets.chomp
end

task :setup do
	sh "heroku plugins:install git://github.com/ddollar/heroku-accounts.git"



	print "1.) heroku account, then use 'heroku accounts:set <name>'"
	print "2.) .env file"
end